
<div class="container d-flex justify-content-center">
        <div class="col">
            <table class="table-dark table table-bordered">
                <thead>
                    <tr>
                        <th class="bg-success text-white" scope="col">id</th>
                        <th class="bg-success text-white" scope="col">nombre</th>
                        <th class="bg-success text-white" scope="col">marca</th>
                        <th class="bg-success text-white" scope="col">modelo</th>
                        <th class="bg-success text-white" scope="col">precio</th>
                        <th class="bg-success text-white" scope="col">categoria</th>
                        <th class="bg-success text-white" scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody id="productos">
                </tbody>
            </table>
        </div>
</div>
<div class="col-md-7 col-lg-12 d-flex justify-content-center">
    <form class="needs-validation" novalidate="">
        <div class="row g-3">
            <div class="col-sm-6">
                <label for="firstName" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombreProducto" placeholder="" value="" required="">
            </div>

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Marca</label>
                <input type="text" class="form-control" id="marcaProducto" placeholder="" value="" required="">
            </div>
            
            <div class="col-sm-6">
                <label for="lastName" class="form-label">Modelo</label>
                <input type="text" class="form-control" id="modeloProducto" placeholder="" value="" required="">
            </div>
            <div class="col-sm-6">
                <label for="lastName" class="form-label">Precio</label>
                <input type="text" class="form-control" id="precioProducto" placeholder="" value="" required="">
            </div>
            <div class="col-sm-12">
                <label for="lastName" class="form-label">Categoria</label>
                <input type="text" class="form-control" id="categoriaProducto" placeholder="" value="" required="">
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button class="w-25 btn btn-primary btn-lg mt-2" id="botonProducto" type="submit">Crear Producto</button>
        </div>
</div>


